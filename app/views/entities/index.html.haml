- model_class = Entity
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:name)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @entities.each do |entity|
      %tr
        %td= link_to entity.id, entity_path(entity)
        %td= entity.name
        %td=l entity.created_at, format: :short
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_entity_path(entity), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), entity_path(entity), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_entity_path, :class => 'btn btn-primary'
