= simple_form_for @receiver, :html => { :class => 'form-horizontal' } do |f|
  = f.input :email
  = f.input :name
  = f.input :entity_id, collection: @entities, prompt: "Seleccione una entidad..."
  .form-actions
    = f.button :submit, :class => 'btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), receivers_path, :class => 'btn'
