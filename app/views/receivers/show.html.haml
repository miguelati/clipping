- model_class = Receiver
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:email) + ':'
  %br
  = @receiver.email
%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @receiver.name
%p
  %strong= model_class.human_attribute_name(:entity_id) + ':'
  %br
  = @receiver.entity_id

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), receivers_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_receiver_path(@receiver), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), receiver_path(@receiver), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
