.navbar.navbar-fluid-top
  .navbar-inner
    .container-fluid
      %a.btn.btn-navbar(data-target=".nav-collapse" data-toggle="collapse")
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      %a.brand(href="#") Clippping
      .container.nav-collapse
        %ul.nav
          %li.dropdown
            =link_to "#", :class => "dropdown-toggle", :"data-toggle" => "dropdown" do
              =t("menu.config.title")
              =raw("<b class='caret'></b>")
            %ul.dropdown-menu
              %li= link_to t("menu.config.submenu.categories"), categories_path
              %li= link_to t("menu.config.submenu.receivers"), receivers_path
              - if current_user.is_admin
                %li= link_to t("menu.config.submenu.users"), users_path
                %li= link_to t("menu.config.submenu.entities"), entities_path
          %li.dropdown
            =link_to "#", :class => "dropdown-toggle", :"data-toggle" => "dropdown" do
              =t("menu.shipping.title")
              =raw("<b class='caret'></b>")
            %ul.dropdown-menu
              %li=link_to t("menu.shipping.submenu.new"), shippings_path
        .pull-right
          %ul.nav.pull-right
            %li.dropdown
              %a.dropdown-toggle{href: "#", :'data-toggle' => 'dropdown'}
                = current_user.name
                %b.caret
              %ul.dropdown-menu
                %li= link_to "salir", destroy_user_session_path, :method => :delete