%h2 Iniciar sesión
= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), :wrapper => :bootstrap, input_html: {class: 'form-horizonta'}) do |f|
  .form-inputs
    = f.input :email, :required => false, :autofocus => true
    = f.input :password, :label => "Contraseña", :required => false
    = f.input :remember_me, :as => :boolean, :label => "Recordarme", :wrapper => :checkbox if devise_mapping.rememberable?
    = render "devise/shared/links"
  .form-actions
    = f.button :submit, "Ingresar"